set -U SXHKD_SHELL sh

# Restart sxhkd.
super + Escape
	pkill -USR1 -x sxhkd

# Increase screen brightness.
XF86MonBrightnessUp
	brightnessctl set +3%

# Decrease screen brightness.
XF86MonBrightnessDown
	brightnessctl set 3%-

# Mute audio.
XF86AudioMute
	pamixer --toggle-mute

# Increase/decrease volume.
XF86Audio{Lower,Raise}Volume
	pamixer -{d,i} 5

# Lock screen.
XF86Sleep
	# https://github.com/google/xsecurelock
	xset s activate

# Print screen.
Print
	flameshot gui

# Toggle between Swedish and American keyboard layout.
super + ctrl + p
	togglexkbmap

# Restart bspwm.
super + shift + r
	bspc wm -r

# Quit bspwm.
super + shift + q
	bspc node -c

# Focus the node in the given direction.
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# Swap the node in the given direction.
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# Focus the selected desktop on primary monitor.
super + {1-6}
	bspc desktop -f '^{1-6}'

# Focus the selected desktop on secondary monitor.
alt + {1-3,4}
	bspc desktop -f '^{7-9,10}'

# Send the selected node to the given desktop on primary monitor.
super + shift + {1-6}
	bspc node -d '^{1-6}'

# Send the selected node to the given desktop on secondary monitor.
alt + shift + {1-3,4}
	bspc node -d '^{7-9,10}'

# Expand/contract a window by moving one of its side outward/inward.
# Gets us into a "resize mode". Hit Esc to exit.
super + s : {h,j,k,l}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# Set the window state.
super + {t,f,shift + f}
	bspc node -t {tiled,floating,fullscreen}

# Move a floating window.
super + ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Spawn terminal.
super + Return
	wezterm

# Spawn dmenu.
super + d
	rofi -show drun
