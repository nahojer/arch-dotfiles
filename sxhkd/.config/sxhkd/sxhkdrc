super + Escape
	pkill -USR1 -x sxhkd

XF86MonBrightnessUp
	brightnessctl set +3%

XF86MonBrightnessDown
	brightnessctl set 3%-

XF86AudioMute
	pamixer --toggle-mute

XF86Audio{Lower,Raise}Volume
	pamixer -{d,i} 5

XF86Sleep
	# https://github.com/google/xsecurelock
	xset s activate && systemctl suspend -i

super + ctrl + p
	togglexkbmap
